mixin taskItem(i,b,title,text)
	+b.taskItem(href="#")
		+pic(`task-bg-${i}.jpg`,'bg','')(class="picture-bg")
		span
			+e.topBlock&attributes(attributes)= b
		+e.descr
			+e.title!= title
			if text
