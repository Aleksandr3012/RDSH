mixin sLogin(data)
	// start sLogin
	+b.SECTION.sLogin.section#sLogin&attributes(attributes)
		.container
			+b.section-title.text-center
				h1 Вход
			.section__inner
				form
					input(name='example-input-field', type='hidden')
					input(class="order", name='order', type='hidden', value=`Заявка  с сайта`) 
					input(class='utm_source' name='utm_source' type="hidden")
					input(class='utm_term' name='utm_term' type="hidden")
					input(class='utm_medium' name='utm_medium' type="hidden")
					input(class='utm_campaign' name='utm_campaign' type="hidden")
					+input('Введите ваш e-mail','email')
					+input('Введите ваш пароль','password')
					.text-center
						+e.btn(type="submit") Войти
						+e.row.row.align-items-center.justify-content-center
							.col-auto
								+e.btnLight(href="#") Регистрация
							.col-auto
								+e.btnLight(href="#") Восстановление пароля
				
	// end sLogin

