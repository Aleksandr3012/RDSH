mixin itemSchool(t,p, s)
	if s
		+e.slide.swiper-slide
			+e.item
				+e.title-sm!= t
				p!= p
				+e.btn.btn-white(href="#") Подробнее
	else
		+e.col-item.col-xl-4.col-lg-6
			+e.item
				+e.title-sm!= t
				p!= p
				+e.btn.btn-white(href="#") Подробнее
mixin sSchools(data)
	// start sSchools
	+b.SECTION.sSchools.section#sSchools&attributes(attributes)
		.container
			+e.head.section__inner
				.row
					.col-xxl-auto
